@{
    ViewData["Title"] = "Home";
    // No need to add link tag here since we'll add it to the layout
}

<!-- Hero Section -->
<section id="hero" class="hero-section fullpage-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <h1 class="fw-bold">Bring Your Own Material.<br />Let AI Tailor Your Lesson.</h1>
                <p class="lead">Upload your content and let Lesson Tailor craft personalized English lessons with interactive vocabulary tools and customized learning experiences.</p>
                <div class="d-flex flex-wrap gap-3">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg">Get Started</a>
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary btn-lg">Sign In</a>
                    }
                    else
                    {
                        <a asp-controller="Lessons" asp-action="Create" class="btn btn-primary btn-lg">Create New Lesson</a>
                    }
                </div>

            </div>
            <div class="col-lg-6">
                <img src="~/images/LessonTailor.png" alt="Lesson Tailor" class="img-fluid hero-img">
            </div>
        </div>
    </div>
    <!-- Scroll down indicator -->
    <a href="#features" class="scroll-indicator">
        <span></span>
        <span></span>
    </a>
</section>

<!-- Visual section divider -->
<div class="section-divider"></div>

<!-- Features Section - Improved Design -->
<section id="features" class="features-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 text-center mb-5">
                <h2 class="features-title">How Lesson Tailor Works</h2>
                <p class="features-subtitle">A simple three-step process to enhance your language learning</p>
            </div>
        </div>

        <div class="row g-4 justify-content-center">
            <div class="col-lg-4 col-md-6">
                <div class="card feature-card shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="feature-icon">
                            <i class="bi bi-upload"></i>
                        </div>
                        <h3>Upload</h3>
                        <p>Upload your own materials - texts, articles, or documents you want to learn from.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="card feature-card shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="feature-icon">
                            <i class="bi bi-magic"></i>
                        </div>
                        <h3>AI Processing</h3>
                        <p>Our AI tailors your content into interactive lessons with vocabulary tools and exercises.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="card feature-card shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="feature-icon">
                            <i class="bi bi-book"></i>
                        </div>
                        <h3>Learn</h3>
                        <p>Study with interactive words, create flashcards, and track your progress effectively.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Visual section divider -->
<div class="section-divider"></div>

<!-- Call to Action - Improved Design -->
<section id="cta" class="cta-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="cta-content text-center">
                    <h2>Ready to transform your learning experience?</h2>
                    <p class="cta-text mb-4">Join thousands of students who are already taking control of their English learning journey with personalized lessons.</p>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-light btn-lg">Join Now</a>
                    }
                    else
                    {
                        <a asp-controller="Lessons" asp-action="Index" class="btn btn-light btn-lg">Go to Your Lessons</a>
                    }

                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <script>
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();

                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);

                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 70, // Adjust for navbar height
                        behavior: 'smooth'
                    });
                }
            });
        });
    </script>
}
