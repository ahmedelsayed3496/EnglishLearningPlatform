@model Flashcard

@{
    ViewData["Title"] = "Create Flashcard";

}


<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Word"></label>
        <input asp-for="Word" class="form-control" />
        <span asp-validation-for="Word" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Meaning"></label>
        <input asp-for="Meaning" class="form-control" />
        <span asp-validation-for="Meaning" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExampleSentence"></label>
        <input asp-for="ExampleSentence" class="form-control" />
        <span asp-validation-for="ExampleSentence" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LessonId">Lesson</label>
        <select asp-for="LessonId" class="form-control" asp-items="@(new SelectList(ViewBag.Lessons, "LessonId", "Title"))">
            <option value="">-- None --</option>
        </select>
        <span asp-validation-for="LessonId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
